---

import {
	Accordion,
	AccordionContent,
	AccordionItem,
	AccordionTrigger,
} from "@components/Accordion";
import Badge from "@components/Badge/Badge.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const faqData = getTranslatedData("faqData", currLocale);
---

<section id="faq-accordions" class="overflow-hidden py-20 md:py-28">
	<div class="site-container grid gap-10 md:grid-cols-2 md:gap-16">
		<div class="mr-auto max-w-lg md:max-w-none" data-aos="fade-right">
			<Badge>FAQ</Badge>
			<h2 class="h2">{faqData.title}</h2>
		</div>
		<Accordion class="space-y-3" data-aos="fade-left">
			{
				faqData.faqItems.map((faqItem, idx) => (
					<AccordionItem value={`item-${idx}`} class="hover-border-glow">
						<AccordionTrigger>{faqItem.question}</AccordionTrigger>
						<AccordionContent class="" details={faqItem.answer} />
					</AccordionItem>
				))
			}
		</Accordion>
	</div>
</section>

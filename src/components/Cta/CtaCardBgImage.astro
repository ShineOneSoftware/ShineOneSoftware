---
/**
 * * CTA centered card with background image
 */

import Button from "@components/Button/Button.astro";
// take a look at the actual image to see recommended dimensions
import bgImage from "@images/abstract-1.jpg";
import { Image } from "astro:assets";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";
const currLocale = getLocaleFromUrl(Astro.url);
const ctaData = getTranslatedData("ctaData", currLocale);
---

<section id="cta-center" class="site-container overflow-hidden py-16 md:py-20">
	<div
		class="dark border-base-800 bg-base-900 dark:bg-base-950 relative overflow-hidden rounded-2xl border px-8 py-16 md:px-10 md:py-24"
	>
		<!-- bg image -->
		<div class="absolute inset-0 h-full overflow-hidden">
			<Image
				src={bgImage}
				alt="background"
				loading="lazy"
				width={1170}
				densities={[1, 1.5, 2]}
				class="h-full w-full transform object-cover brightness-50"
				aria-hidden="true"
			/>
		</div>

		<div class="relative">
			<div class="mx-auto max-w-3xl text-center">
				<h2 class="h2 text-base-50">{ctaData.title}</h2>
				<p class="text-base-200 mx-auto mb-16 max-w-xl tracking-tight md:text-lg">
					{ctaData.description}
				</p>
				<div class="relative flex justify-center">
					<Button
						variant="outline"
						href="/contact"
						arrow="right"
						rel="noopener noreferrer"
						class="dark:border-base-100"
					>
						{ctaData.buttonText}
					</Button>
				</div>
			</div>
		</div>
	</div>
</section>
